@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background-color: #212529;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 1030;
            padding: 1rem;
        }

            .sidebar .nav-link {
                color: white;
                border-radius: 0.5rem;
                margin-bottom: 0.5rem;
                transition: background-color 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

                .sidebar .nav-link.active {
                    background: white;
                    color: #212529 !important;
                }

            .sidebar .bi {
                margin-right: 8px;
            }

        .offcanvas .nav-link.active {
            background-color: white;
            color: #212529 !important;
        }

        .offcanvas .nav-link:hover,
        .offcanvas .nav-link:focus,
        .offcanvas .nav-link:active {
            background-color: #495057;
            color: white;
        }

        #main-container {
            margin-left: 0;
            padding: 1rem;
            margin-top: 56px; /* tinggi navbar mobile */
        }
        @@media (min-width: 768px) {
            #main-container

        {
            margin-left: 250px; /* sidebar width */
            margin-top: 0;
        }

        }
    </style>
</head>
<body>

    <!-- Navbar untuk mobile -->
    <nav class="navbar navbar-dark bg-dark fixed-top d-md-none">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-brand ms-2">Admin Puskesmas</span>
        </div>
    </nav>

    <!-- Sidebar statis di desktop -->
    <div class="sidebar d-none d-md-flex flex-column">
        <div class="d-flex align-items-center mb-4 text-white">
            <i class="bi bi-hospital fs-4 me-2"></i>
            <span class="fs-4 fw-bold">Admin Puskesmas</span>
        </div>
        <hr class="border-secondary" />
        <ul class="nav flex-column">
            <li>
                <a asp-controller="Dokters" asp-action="Index" class="nav-link @(currentController == "Dokters" ? "active" : "")">
                    <i class="bi bi-person-badge"></i> Dokter
                </a>
            </li>
            <li>
                <a asp-controller="Pasiens" asp-action="Index" class="nav-link @(currentController == "Pasiens" ? "active" : "")">
                    <i class="bi bi-people"></i> Pasien
                </a>
            </li>
            <li>
                <a asp-controller="Reservasis" asp-action="Index" class="nav-link @(currentController == "Reservasis" ? "active" : "")">
                    <i class="bi bi-calendar-check"></i> Reservasi
                </a>
            </li>
            <li>
                <a asp-controller="RekamMedis" asp-action="Index" class="nav-link @(currentController == "RekamMedis" ? "active" : "")">
                    <i class="bi bi-journal-text"></i> Rekam Medis
                </a>
            </li>
            <li>
                <a asp-controller="Jadwals" asp-action="Index" class="nav-link @(currentController == "Jadwals" ? "active" : "")">
                    <i class="bi bi-clock-history"></i> Jadwal
                </a>
            </li>
        </ul>
    </div>

    <!-- Sidebar offcanvas untuk mobile -->
    <div class="offcanvas offcanvas-start text-bg-dark p-3 d-md-none" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
        <div class="d-flex align-items-center mb-4">
            <i class="bi bi-hospital fs-4 me-2"></i>
            <span class="fs-4 fw-bold" id="sidebarOffcanvasLabel">Admin Panel</span>
            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <hr class="border-secondary" />
        <ul class="nav flex-column">
            <li class="mb-2">
                <a asp-controller="Dokters" asp-action="Index" class="nav-link text-white @(currentController == "Dokters" ? "active" : "")">
                    <i class="bi bi-person-badge me-2"></i> Dokter
                </a>
            </li>
            <li class="mb-2">
                <a asp-controller="Pasiens" asp-action="Index" class="nav-link text-white @(currentController == "Pasiens" ? "active" : "")">
                    <i class="bi bi-people me-2"></i> Pasien
                </a>
            </li>
            <li class="mb-2">
                <a asp-controller="Reservasis" asp-action="Index" class="nav-link text-white @(currentController == "Reservasis" ? "active" : "")">
                    <i class="bi bi-calendar-check me-2"></i> Reservasi
                </a>
            </li>
            <li class="mb-2">
                <a asp-controller="RekamMedis" asp-action="Index" class="nav-link text-white @(currentController == "RekamMedis" ? "active" : "")">
                    <i class="bi bi-journal-text me-2"></i> Rekam Medis
                </a>
            </li>
            <li class="mb-2">
                <a asp-controller="Jadwals" asp-action="Index" class="nav-link text-white @(currentController == "Jadwals" ? "active" : "")">
                    <i class="bi bi-clock-history me-2"></i> Jadwal
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <main id="main-container">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
