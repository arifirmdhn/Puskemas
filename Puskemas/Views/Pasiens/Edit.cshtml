@model Pasien

@{
    ViewData["Title"] = "Edit Pasien";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h4 fw-bold text-dark mb-0">Edit Pasien</h1>
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb bg-transparent p-0 m-0">
            <li class="breadcrumb-item"><a href="/Admin/Dashboard" class="text-decoration-none text-dark fw-semibold">Dashboard Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-dark fw-semibold">Pasien</a></li>
            <li class="breadcrumb-item active text-secondary fw-semibold" aria-current="page">Edit</li>
        </ol>
    </nav>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="IdPasien" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Nama" class="form-label fw-semibold">Nama</label>
                        <input asp-for="Nama" class="form-control rounded-3" placeholder="Nama lengkap pasien" />
                        <span asp-validation-for="Nama" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Alamat" class="form-label fw-semibold">Alamat</label>
                        <input asp-for="Alamat" class="form-control rounded-3" placeholder="Alamat lengkap" />
                        <span asp-validation-for="Alamat" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TanggalLahir" class="form-label fw-semibold">Tanggal Lahir</label>
                        <input asp-for="TanggalLahir" type="date" class="form-control rounded-3" />
                        <span asp-validation-for="TanggalLahir" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NomorHp" class="form-label fw-semibold">Nomor HP</label>
                        <input asp-for="NomorHp" class="form-control rounded-3" placeholder="08xxxxxxxxxx" />
                        <span asp-validation-for="NomorHp" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="StatusPernikahan" class="form-label fw-semibold">Status Pernikahan</label>
                        <input asp-for="StatusPernikahan" class="form-control rounded-3" placeholder="Belum / Sudah Menikah" />
                        <span asp-validation-for="StatusPernikahan" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NomorKeluarga" class="form-label fw-semibold">Nomor Keluarga</label>
                        <input asp-for="NomorKeluarga" class="form-control rounded-3" placeholder="Nomor kartu keluarga" />
                        <span asp-validation-for="NomorKeluarga" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="TanggalTerdaftar" class="form-label fw-semibold">Tanggal Terdaftar</label>
                        <input asp-for="TanggalTerdaftar" type="date" class="form-control rounded-3" />
                        <span asp-validation-for="TanggalTerdaftar" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn text-white px-4 py-2" style="background: #2e7d32; border-radius: 0.5rem;">
                        Simpan Perubahan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
