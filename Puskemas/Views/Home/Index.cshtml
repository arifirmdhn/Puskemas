@{
    ViewData["Title"] = "Home Page";
}

<!-- Header Section -->
<!-- Hero Section -->
<div class="container-fluid bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Kolom Teks -->
            <div class="col-md-6 mb-4 mb-md-0">
                <h1 class="display-4 fw-bold text-primary">
                    Exceptional Care,<br>
                    <span class="text-success">Every Time</span>
                </h1>
                <p class="lead mt-3">
                    Learn more about our services and book appointments with professional doctors.
                </p>
                <a class="btn btn-primary btn-lg me-2 mt-2" href="#">Learn More</a>
                <a class="btn btn-outline-success btn-lg mt-2" href="#">Find Doctor</a>
            </div>

            <!-- Kolom Gambar -->
            <div class="col-md-6 text-center">
                <img src="~/images/doctor-main.png" class="img-fluid" alt="Doctor" style="max-width: 100%; height: auto;" />
            </div>
        </div>
    </div>
</div>


<!-- Services Section -->
<div class="container py-5 text-center">
    <h2 class="fw-bold text-secondary mb-4">Easily Book Your Doctor</h2>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="p-4 border rounded shadow-sm">
                <img src="~/images/vaccine.png" class="mb-3" width="50" />
                <h5>Vaccination</h5>
                <p>Protect your family with up-to-date vaccinations</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-4 border rounded shadow-sm">
                <img src="~/images/emergency.png" class="mb-3" width="50" />
                <h5>Emergency</h5>
                <p>24/7 emergency care available anytime</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-4 border rounded shadow-sm">
                <img src="~/images/center.png" class="mb-3" width="50" />
                <h5>Medical Center</h5>
                <p>Comprehensive checkup and treatments</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-4 border rounded shadow-sm">
                <img src="~/images/doctor.png" class="mb-3" width="50" />
                <h5>Specialist Doctor</h5>
                <p>Meet experienced specialists in various fields</p>
            </div>
        </div>
    </div>
</div>

<!-- Facilities and Services -->
<div class="container-fluid bg-white py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5">Facilities and Services</h2>
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="~/images/checkup.jpg" class="img-fluid rounded shadow" />
            </div>
            <div class="col-md-6">
                <h4 class="fw-bold">Medical Check Up</h4>
                <p>Regular health checkups to detect health issues early. Performed by certified professionals.</p>
                <a href="#" class="btn btn-success rounded-pill px-4">Learn More</a>
            </div>
        </div>
    </div>
</div>

<!-- Doctor Consultation Banner -->
<div class="container-fluid bg-info text-white py-5 mt-5">
    <div class="container text-center">
        <h2 class="fw-bold">24/7 Online Doctor Consultations</h2>
        <p>Talk to a licensed doctor anytime, anywhere</p>
        <img src="~/images/doctor-team.png" class="img-fluid" alt="Doctor Team" style="max-height: 250px;" />
    </div>
</div>

<!-- Testimonial Section -->
<div class="container py-5">
    <h2 class="text-center fw-bold mb-5">Patients Testimonial</h2>
    <div class="row g-4">
        <div class="col-md-6">
            <div class="p-4 border rounded shadow-sm">
                <p>"Pelayanan sangat ramah dan cepat. Dokternya profesional banget!"</p>
                <strong>- Michael</strong>
            </div>
        </div>
        <div class="col-md-6">
            <div class="p-4 border rounded shadow-sm">
                <p>"Fasilitasnya lengkap, dan proses reservasi sangat mudah!"</p>
                <strong>- Sarah</strong>
            </div>
        </div>
    </div>
</div>

<!-- Team Section -->
<div class="container py-5 text-center">
    <h2 class="fw-bold mb-4">Meet Our Team</h2>
    <div class="row g-4">
        <div class="col-md-3">
            <img src="~/images/team1.jpg" class="img-fluid rounded-circle mb-2" style="height: 120px;" />
            <h6>Dr. John</h6>
        </div>
        <div class="col-md-3">
            <img src="~/images/team2.jpg" class="img-fluid rounded-circle mb-2" style="height: 120px;" />
            <h6>Dr. Bella</h6>
        </div>
        <div class="col-md-3">
            <img src="~/images/team3.jpg" class="img-fluid rounded-circle mb-2" style="height: 120px;" />
            <h6>Dr. Putri</h6>
        </div>
        <div class="col-md-3">
            <img src="~/images/team4.jpg" class="img-fluid rounded-circle mb-2" style="height: 120px;" />
            <h6>Dr. Adit</h6>
        </div>
    </div>
</div>
