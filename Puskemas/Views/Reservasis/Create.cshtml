@model Reservasi

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4 fw-bold text-dark">Tambah Reservasi</h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="IdPasien" class="form-label"></label>
                    <select asp-for="IdPasien" class="form-select" asp-items="ViewBag.IdPasien"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="IdJadwal" class="form-label"></label>
                    <select asp-for="IdJadwal" class="form-select" asp-items="ViewBag.IdJadwal"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="StatusReservasi" class="form-label"></label>
                    <input asp-for="StatusReservasi" class="form-control" />
                    <span asp-validation-for="StatusReservasi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NomorAntrian" class="form-label"></label>
                    <input asp-for="NomorAntrian" class="form-control" type="number" min="1" />
                    <span asp-validation-for="NomorAntrian" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JamSelesai" class="form-label"></label>
                    <input asp-for="JamSelesai" class="form-control" type="time" />
                    <span asp-validation-for="JamSelesai" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn text-white px-4 py-2" style="background: linear-gradient(90deg, #3b82f6, #ef4444); border-radius: 0.4rem;">
                        <i class="bi bi-save"></i> Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}