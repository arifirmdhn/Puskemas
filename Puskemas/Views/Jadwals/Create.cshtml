@model Jadwal

@{
    ViewData["Title"] = "Tambah Jadwal";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h4 fw-bold text-dark mb-0">Tambah Jadwal</h1>
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb bg-transparent p-0 m-0">
            <li class="breadcrumb-item"><a href="/Admin/Dashboard" class="text-decoration-none text-dark fw-semibold">Dashboard Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-dark fw-semibold">Jadwal</a></li>
            <li class="breadcrumb-item active text-secondary fw-semibold" aria-current="page">Tambah</li>
        </ol>
    </nav>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="IdDokter" class="form-label fw-semibold">Nama Dokter</label>
                        <select asp-for="IdDokter" class="form-select rounded-3" asp-items="ViewBag.IdDokter">
                            <option value="">-- Pilih Dokter --</option>
                        </select>
                        <span asp-validation-for="IdDokter" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Hari" class="form-label fw-semibold">Hari</label>
                        <select asp-for="Hari" class="form-select rounded-3">
                            <option value="">-- Pilih Hari --</option>
                            <option value="Senin">Senin</option>
                            <option value="Selasa">Selasa</option>
                            <option value="Rabu">Rabu</option>
                            <option value="Kamis">Kamis</option>
                            <option value="Jumat">Jumat</option>
                            <option value="Sabtu">Sabtu</option>
                            <option value="Minggu">Minggu</option>
                        </select>
                        <span asp-validation-for="Hari" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="JamMulai" class="form-label fw-semibold">Jam Mulai</label>
                        <input asp-for="JamMulai" type="time" class="form-control rounded-3" />
                        <span asp-validation-for="JamMulai" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="JamSelesai" class="form-label fw-semibold">Jam Selesai</label>
                        <input asp-for="JamSelesai" type="time" class="form-control rounded-3" />
                        <span asp-validation-for="JamSelesai" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Tanggal" class="form-label fw-semibold">Tanggal</label>
                        <input asp-for="Tanggal" type="date" class="form-control rounded-3" />
                        <span asp-validation-for="Tanggal" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StatusJadwal" class="form-label fw-semibold">Status Jadwal</label>
                        <select asp-for="StatusJadwal" class="form-select rounded-3">
                            <option value="">-- Pilih Status --</option>
                            <option value="Aktif">Aktif</option>
                            <option value="Tidak Aktif">Tidak Aktif</option>
                        </select>
                        <span asp-validation-for="StatusJadwal" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn text-white px-4 py-2" style="background: #2e7d32; border-radius: 0.5rem;">
                        Simpan Jadwal
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
