@model RekamMedis

@{
    ViewData["Title"] = "Hapus Rekam Medis";
    Layout = "~/Views/Shared/_LayoutDokter.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 fw-bold text-danger mb-0">Hapus Rekam Medis</h1>
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>

    <div class="alert alert-warning border-0 rounded-3 shadow-sm">
        <strong>Perhatian:</strong> Apakah Anda yakin ingin menghapus data rekam medis berikut?
    </div>

    <div class="card shadow border-0 rounded-4 mb-4">
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-4 fw-semibold text-dark">Tanggal Checkup</dt>
                <dd class="col-sm-8">@Model.TanggalCheckup.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-4 fw-semibold text-dark">Diagnosa</dt>
                <dd class="col-sm-8">@Model.Diagnosa</dd>

                <dt class="col-sm-4 fw-semibold text-dark">Pengobatan</dt>
                <dd class="col-sm-8">@Model.Pengobatan</dd>

                <dt class="col-sm-4 fw-semibold text-dark">Obat</dt>
                <dd class="col-sm-8">@Model.Obat</dd>

                <dt class="col-sm-4 fw-semibold text-dark">Anamnesis</dt>
                <dd class="col-sm-8">@Model.Anamnesis</dd>

                <dt class="col-sm-4 fw-semibold text-dark">Pemeriksaan Fisik</dt>
                <dd class="col-sm-8">@Model.PemeriksaanFisik</dd>

                <dt class="col-sm-4 fw-semibold text-dark">Penatalaksanaan</dt>
                <dd class="col-sm-8">@Model.Penatalaksanaan</dd>

                <dt class="col-sm-4 fw-semibold text-dark">ID Pasien</dt>
                <dd class="col-sm-8">@Model.Pasien?.IdPasien</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRekam" />
        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-danger rounded-pill px-4">
                <i class="bi bi-trash"></i> Hapus
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Batal</a>
        </div>
    </form>
</div>
