@model RekamMedis

@{
    ViewData["Title"] = "Tambah Rekam Medis";
    Layout = "~/Views/Shared/_LayoutDokter.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h4 fw-bold text-dark mb-0">Tambah Rekam Medis</h1>
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>

    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb bg-transparent p-0 m-0">
            <li class="breadcrumb-item"><a href="/Dokter/Dashboard" class="text-decoration-none text-dark fw-semibold">Dashboard Dokter</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-dark fw-semibold">Rekam Medis</a></li>
            <li class="breadcrumb-item active text-secondary fw-semibold" aria-current="page">Tambah</li>
        </ol>
    </nav>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="IdPasien" class="form-label fw-semibold">Pasien</label>
                        <select asp-for="IdPasien" class="form-control rounded-3" asp-items="ViewBag.IdPasien"></select>
                        <span asp-validation-for="IdPasien" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TanggalCheckup" class="form-label fw-semibold">Tanggal Checkup</label>
                        <input asp-for="TanggalCheckup" type="date" class="form-control rounded-3" />
                        <span asp-validation-for="TanggalCheckup" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Diagnosa" class="form-label fw-semibold">Diagnosa</label>
                        <input asp-for="Diagnosa" class="form-control rounded-3" placeholder="Contoh: ISPA, Hipertensi" />
                        <span asp-validation-for="Diagnosa" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Pengobatan" class="form-label fw-semibold">Pengobatan</label>
                        <input asp-for="Pengobatan" class="form-control rounded-3" placeholder="Contoh: Antibiotik, Terapi Fisik" />
                        <span asp-validation-for="Pengobatan" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Obat" class="form-label fw-semibold">Obat</label>
                        <input asp-for="Obat" class="form-control rounded-3" placeholder="Contoh: Paracetamol, Amoxicillin" />
                        <span asp-validation-for="Obat" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Anamnesis" class="form-label fw-semibold">Anamnesis</label>
                        <input asp-for="Anamnesis" class="form-control rounded-3" placeholder="Contoh: Sakit tenggorokan, demam" />
                        <span asp-validation-for="Anamnesis" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PemeriksaanFisik" class="form-label fw-semibold">Pemeriksaan Fisik</label>
                        <input asp-for="PemeriksaanFisik" class="form-control rounded-3" placeholder="Contoh: Tekanan darah, suhu tubuh" />
                        <span asp-validation-for="PemeriksaanFisik" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Penatalaksanaan" class="form-label fw-semibold">Penatalaksanaan</label>
                        <input asp-for="Penatalaksanaan" class="form-control rounded-3" placeholder="Contoh: Rawat jalan / rujukan" />
                        <span asp-validation-for="Penatalaksanaan" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn text-white px-4 py-2" style="background: #2e7d32; border-radius: 0.5rem;">
                        Simpan Rekam Medis
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
