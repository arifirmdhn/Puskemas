@model RekamMedis

@{
    ViewData["Title"] = "Edit Rekam Medis";
    Layout = "~/Views/Shared/_LayoutDokter.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 fw-bold text-dark mb-0">Edit Rekam Medis</h1>
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdRekam" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="IdPasien" class="form-label fw-semibold">Pasien</label>
                        <select asp-for="IdPasien" class="form-control rounded-3" asp-items="ViewBag.IdPasien"></select>
                        <span asp-validation-for="IdPasien" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TanggalCheckup" class="form-label fw-semibold">Tanggal Checkup</label>
                        <input asp-for="TanggalCheckup" type="date" class="form-control rounded-3" />
                        <span asp-validation-for="TanggalCheckup" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Diagnosa" class="form-label fw-semibold">Diagnosa</label>
                        <input asp-for="Diagnosa" class="form-control rounded-3" />
                        <span asp-validation-for="Diagnosa" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Pengobatan" class="form-label fw-semibold">Pengobatan</label>
                        <input asp-for="Pengobatan" class="form-control rounded-3" />
                        <span asp-validation-for="Pengobatan" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Obat" class="form-label fw-semibold">Obat</label>
                        <input asp-for="Obat" class="form-control rounded-3" />
                        <span asp-validation-for="Obat" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Anamnesis" class="form-label fw-semibold">Anamnesis</label>
                        <input asp-for="Anamnesis" class="form-control rounded-3" />
                        <span asp-validation-for="Anamnesis" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PemeriksaanFisik" class="form-label fw-semibold">Pemeriksaan Fisik</label>
                        <input asp-for="PemeriksaanFisik" class="form-control rounded-3" />
                        <span asp-validation-for="PemeriksaanFisik" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Penatalaksanaan" class="form-label fw-semibold">Penatalaksanaan</label>
                        <input asp-for="Penatalaksanaan" class="form-control rounded-3" />
                        <span asp-validation-for="Penatalaksanaan" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn text-white px-4 py-2" style="background: #2e7d32; border-radius: 0.5rem;">
                        <i class="bi bi-save"></i> Simpan Perubahan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
